<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ){
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() }}
        })
      }
    });
  });
  $(function() {
    $('.sections').sortable({
      update: function( event, ui ){
        alert('url: ' + ui.item.data('section-update-url') + ' index: ' + ui.item.index());
        $.ajax({
          type: 'PUT',
          url: ui.item.data('section-update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() }}
        })
      }
    });
  });
</script>
<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <%= image_tag current_course.image.url.to_s, class: "img_fluid" %>
  <br />
  <div class="text-center">
    <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-warning btn-large float-right' %>
    <div class="clear">
    <%= link_to 'Add a new section', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-large' %>
    <ul class="sections">
      <% current_course.sections.rank(:row_order).each do |section| %>
      <li data-section-update-url=<%= instructor_section_path(section) %>>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul class="lessons"><% section.lessons.rank(:row_order).each do |lesson| %>
          <li data-update-url=<%= instructor_lesson_path(lesson) %>>
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
          </li>
          <% end %>
        </ul>
        <br class="clear" />
      </li>
      <% end %>
    </ul>
  </div>
</div>